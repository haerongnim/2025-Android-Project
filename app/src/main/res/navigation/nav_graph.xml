<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.spendy_2.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_map"
        android:name="com.example.spendy_2.ui.map.MapFragment"
        android:label="@string/title_map"
        tools:layout="@layout/fragment_map" />

    <fragment
        android:id="@+id/navigation_statistics"
        android:name="com.example.spendy_2.ui.statistics.StatisticsFragment"
        android:label="@string/title_statistics"
        tools:layout="@layout/fragment_statistics" />

    <fragment
        android:id="@+id/navigation_friends"
        android:name="com.example.spendy_2.ui.friends.FriendsFragment"
        android:label="@string/title_friends"
        tools:layout="@layout/fragment_friends" />

    <fragment
        android:id="@+id/navigation_friend_stats"
        android:name="com.example.spendy_2.ui.friends.FriendStatsFragment"
        android:label="친구 통계"
        tools:layout="@layout/fragment_friend_stats" />

    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.example.spendy_2.ui.friends.ChatFragment"
        android:label="채팅"
        tools:layout="@layout/fragment_chat" />

    <fragment
        android:id="@+id/navigation_transaction_detail"
        android:name="com.example.spendy_2.ui.home.TransactionDetailFragment"
        android:label="거래 상세"
        tools:layout="@layout/fragment_transaction_detail">
        
        <argument
            android:name="transaction_id"
            app:argType="string" />

    </fragment>

</navigation> 